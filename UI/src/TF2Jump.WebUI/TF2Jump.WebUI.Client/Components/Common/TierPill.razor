<FluentBadge Style="@GetStyle()"
             BackgroundColor="@GetBackgroundColor()"
             Color="@GetColor()"
             Fill="tier">
    Tier @Tier
</FluentBadge>

@code {

    [Parameter, EditorRequired]
    public required string Tier { get; set; }

    [Parameter]
    public string? Style { get; set; }

    private string? GetStyle()
    {
        if (Tier is "0")
        {
            return Style + "; border: 1px solid #C6C6D5; border-radius: 4px";
        }

        return Style;
    }
    
    private string GetBackgroundColor() => Tier switch
    {
        "1" => "#547855",
        "2" => "#3D686E",
        "3" => "#5176A1",
        "4" => "#5A4F9D",
        "5" => "#954392",
        "6" => "#FA6491",
        "0" => /*transparent*/ "#333333",
        _ => "#E2E2EB"
    };
    
    private string GetColor() => Tier switch
    {
        "6" => "black",
        "0" => "#C6C6D5",
        _ => "white"
    };
}