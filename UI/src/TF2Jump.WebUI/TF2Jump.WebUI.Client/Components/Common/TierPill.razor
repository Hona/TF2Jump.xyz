<FluentBadge Style="@Style"
             BackgroundColor="@GetBackgroundColor()"
             Color="@GetColor()"
             Fill="tier">
    Tier @Tier
</FluentBadge>

@code {

    [Parameter]
    public string Tier { get; set; }

    [Parameter]
    public string Style { get; set; }
    
    private string GetBackgroundColor() => Tier switch
    {
        "1" => "#845EC2",
        "2" => "#D65DB1",
        "3" => "#FF6F91",
        "4" => "#FF9671",
        "5" => "#FFC75F",
        "6" => "#F9F871",
        _ => "#120056"
    };
    
    private string GetColor() => Tier switch
    {
        "3" or "4" or "5" or "6" => "black",
        _ => "white"
    };
}