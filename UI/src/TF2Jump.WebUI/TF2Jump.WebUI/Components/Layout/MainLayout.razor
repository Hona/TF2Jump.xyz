@inherits LayoutComponentBase

<FluentLayout>
    <FluentHeader>
        <span class="site-name">
            <a href="/">
                TF2 Jump
            </a>
        </span>
        
        <NavMenu />
        
        <FluentSpacer />
        
        <FluentStack Orientation="Orientation.Horizontal" Class="header-right" Width="fit-content">
            <Search />
            <ProfileAvatar />
        </FluentStack>
    </FluentHeader>
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100dvw">
        <FluentBodyContent Class="body-content">
            <div class="content">
                @Body
            </div>
        </FluentBodyContent>
    </FluentStack>
    <FluentFooter>
        <FluentStack Orientation="Orientation.Horizontal" HorizontalAlignment="HorizontalAlignment.Center" Wrap>
            <a class="footer-link" href="https://tempus2.xyz" target="_blank">Tempus Jump Network</a>
            <a class="footer-link" href="https://github.com/Hona/awesome-tf2-jump" target="_blank">awesome-tf2-jump</a>
            <a class="footer-link" href="https://github.com/Hona/TF2Jump" target="_blank">Source code</a>
        </FluentStack>
    </FluentFooter>
</FluentLayout>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
