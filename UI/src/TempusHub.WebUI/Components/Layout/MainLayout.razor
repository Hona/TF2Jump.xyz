@inherits LayoutComponentBase

<FluentLayout>
    <FluentHeader>
        <span>
            Tempus Hub
        </span>
        
        <NavMenu/>
    </FluentHeader>
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
        <FluentBodyContent Class="body-content">
            <div class="content">
                @Body
            </div>
        </FluentBodyContent>
    </FluentStack>
    <FluentFooter>
        <FluentStack Orientation="Orientation.Horizontal" HorizontalAlignment="HorizontalAlignment.Center" Wrap>
            <a class="footer-link" href="https://tempus2.xyz" target="_blank">Tempus Jump Network</a>
            <a class="footer-link" href="https://github.com/Hona/awesome-tf2-jump" target="_blank">awesome-tf2-jump</a>
            <a class="footer-link" href="https://github.com/Hona/TempusHub2" target="_blank">Source code</a>
        </FluentStack>
    </FluentFooter>
</FluentLayout>

<ThemeProvider />


<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
